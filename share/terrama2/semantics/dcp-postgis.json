[
  {
    "name": "DCP - PostGIS",
    "code": "DCP-postgis",
    "driver": "DCP-postgis",
    "type": "DCP",
    "temporality": "DYNAMIC",
    "format": "POSTGIS",
    "providers_type_list": ["POSTGIS"],
    "allow_direct_access": false,
    "allow_storage": true,
    "gui": {
      "schema": {
        "properties": {
          "table_name": {
            "type": "string",
            "title": "Table Name",
            "hasPrefixFieldForImport": true,
            "hasSuffixFieldForImport": true,
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
          },
          "latitude": {
            "type": "number",
            "title": "Latitude / Y (m)"
          },
          "longitude": {
            "type": "number",
            "title": "Longitude / X (m)"
          },
          "projection": {
            "type": "number",
            "title": "Projection (SRID)",
            "minimum": 0,
            "maximum": 998999,
            "hasDefaultFieldForImport": true
          },
	        "alias": {
            "type": "string",
            "title": "DCP Name",
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
            "hasPrefixFieldForImport": true
          },
          "active": {
            "type": "boolean",
            "title": "Active",
            "default": true,
            "defaultForImport": true
          }
        },
        "required": ["table_name", "latitude", "longitude", "projection", "active"]
      },
      "form": [
        {
          "key": "table_name",
          "htmlClass": "col-md-6 terrama2-schema-form",
          "validationMessage": {
            "202": "Invalid table name"
          }
        },
        {
          "key": "alias",
          "htmlClass": "col-md-6 terrama2-schema-form",
          "validationMessage": {
            "202": "Invalid alias"
          }
        },
        {
          "key": "latitude",
          "htmlClass": "col-md-2"
        },
        {
          "key": "longitude",
          "htmlClass": "col-md-2"
        },
        {
          "key": "projection",
          "htmlClass": "col-md-2"
        },
        {
          "key": "active",
          "htmlClass": "col-md-2 terrama2-schema-checkbox",
          "disableSuccessState": true,
          "disableErrorState": true
        }
      ]
    }
  }
]
