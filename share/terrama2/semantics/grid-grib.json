[
  {
    "name": "Grid - Grib2",
    "code": "GRID-grib",
    "driver": "GRID-grib",
    "type": "GRID",
    "temporality": "DYNAMIC",
    "format": "GDAL",
    "providers_type_list": ["FILE", "FTP", "HTTP", "HTTPS"],
    "allow_direct_access": false,
    "metadata": {
      "timestamp_property": "file_timestamp"
    },
    "gui": {
      "schema": {
        "properties": {
          "mask": {
            "type": "string",
